<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context="com.adguard.android.contentblocker.onboarding.OnboardingActivity">

    <com.adguard.android.contentblocker.ui.ClickViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize" />

    <!-- divider -->
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="?attr/actionBarSize"
        android:alpha="0.5"
        android:background="@color/colorPrimaryDark" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <ImageView
            android:id="@+id/intro_indicator_0"
            android:layout_width="@dimen/pager_indicator_size"
            android:layout_height="@dimen/pager_indicator_size"
            android:layout_marginEnd="@dimen/activity_margin_half"
            android:layout_marginRight="@dimen/activity_margin_half"
            android:background="@drawable/indicator_unselected" />

        <ImageView
            android:id="@+id/intro_indicator_1"
            android:layout_width="@dimen/pager_indicator_size"
            android:layout_height="@dimen/pager_indicator_size"
            android:layout_marginEnd="@dimen/activity_margin_half"
            android:layout_marginRight="@dimen/activity_margin_half"
            android:background="@drawable/indicator_unselected" />

        <ImageView
            android:id="@+id/intro_indicator_2"
            android:layout_width="@dimen/pager_indicator_size"
            android:layout_height="@dimen/pager_indicator_size"
            android:layout_marginEnd="@dimen/activity_margin_half"
            android:layout_marginRight="@dimen/activity_margin_half"
            android:background="@drawable/indicator_unselected" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
