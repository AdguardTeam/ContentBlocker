<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/cardview_margin"
        android:paddingEnd="@dimen/cardview_margin">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginStart="@dimen/indent_normal"
            android:layout_marginEnd="@dimen/indent_normal"
            android:src="@drawable/chrome" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/chrome_dialog_title"
            android:textColor="@color/primaryText"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_title_margin"
        android:layout_marginRight="@dimen/dialog_title_margin"
        android:layout_marginBottom="@dimen/dialog_title_margin"
        android:text="@string/chrome_dialog_text"
        android:textColor="@color/primaryText"
        android:textColorLink="@color/black"
        android:textColorHighlight="@color/adguard_green_light"
        android:textSize="16sp" />

    <Button
        android:id="@+id/go_to_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/dialog_title_margin"
        android:layout_marginLeft="@dimen/dialog_title_margin"
        android:layout_marginBottom="@dimen/indent_normal"
        android:background="@drawable/button_rounded_selector"
        android:text="@string/go_to_products"/>
</LinearLayout>